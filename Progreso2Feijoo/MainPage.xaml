<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Progreso2Feijoo.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Label
                Text="Bienvenidos a la aplicacion de Juan Feijoo"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <FlexLayout
                Direction="Row"
                Wrap="Wrap"
                JustifyContent="Center"
                AlignItems="Center"
                
                AlignContent="Center"
>

                <Image Source="imagen5.png" WidthRequest="300" HeightRequest="100" />
                <Image Source="imagen6.png" WidthRequest="300" HeightRequest="100" />
                

            </FlexLayout>

            <Button
                x:Name="BotonChistesLayout"
                Text="Chistes"
                Clicked="BotonChistesLayout_Clicked"
                VerticalOptions="Center" 
                HorizontalOptions="Center"/>
            <Button
                x:Name="BotonAboutLayout"
                Text="About"
                Clicked="BotonAboutLayout_Clicked"
                VerticalOptions="Center" 
                HorizontalOptions="Center"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
